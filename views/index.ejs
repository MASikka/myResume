<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/697c2c5344.js" crossorigin="anonymous"></script>
</head>
<body class="bg-light">
    <!--navbar start-->

    <nav class="navbar navbar-light bg-light fixed-top">
        <div class="container-lg">
          <a class="navbar-brand" href="#">My Profile</a>
          <div class="dropdown">
            <button class="btn btn-secondary btn-danger px-3" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-bars"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
              <li><a class="dropdown-item" href="#home">Home</a></li>
              <li><a class="dropdown-item" href="#about">About</a></li>
              <li><a class="dropdown-item" href="#contact">Contact</a></li>
            </ul>
          </div>       
      </nav> 

    <!--navbar end-->

    <!--home section-->

    <section class="home py-5" id="home">
        <div class="container-lg mt-5">
            <div class="row min-vh-95 align-items-center">
                <div class="col-md-6  mt-md-0">
                    <div class="home-img  text-center">
                        <img class="rounded-circle" src="<%= myResume[0].image %>" alt="" width="300" height="auto" />
                    </div>
                </div>

                <div class="col-md-6 mt-5 mt-md-0">
                    <div class="home-text">
                        <p class="text-muted mb-1">Hello</p>
                        <h1 class="fs-4" name="fullname">I am <%= myResume[0].fullName %></h1>
                        <h2 class="text-danger text-uppercase fs-1 fw-bold" name="title"><%= myResume[0].occupation %></h2>
                        <p class="mt-4 text-muted"><%= myResume[0].introduction %></p>
                        <a class="btn btn-danger px-3 mt-3" href="#contact">Contact me</a>
                        <p class="mt-4 text-muted">Location: <%= myResume[0].residence %></p>
                        <p class="mt-4 text-muted">Date of birth: <%= myResume[0].dateOfBirth %></p>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="about bg-white py-5" id="about">
        <div class="container-lg py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-title text-center">
                        <h2 class="fw-bold mb-5">About Me</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="about-text">
                        <h3 class="fs-4 mb-3">Education</h3>
                        <p class="text-muted"><%= myResume[0].school1 %>, <%= myResume[0].graduationDate1 %></p>
                        <p class="text-muted"><%= myResume[0].school2 %>, <%= myResume[0].graduationDate2 %></p>
                        <p class="text-muted"><%= myResume[0].school3 %>, <%= myResume[0].graduationDate3 %></p>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="about-text">
                        <h3 class="fs-4 mb-3">Technical Skills</h3>
                        <p class="text-muted"><%= myResume[0].technicalSkills %></p>
                        <h3 class="fs-4 mb-3">Soft Skills</h3> 
                        <p class="text-muted"><%= myResume[0].softSkills %></p>
                    </div>
                </div>
                
            </div>

        </div>

    </section>

    <!--about section end-->

    <!--Contact section start-->

    <section class="contact" id="contact">
        <div class="container-lg py-4">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-title text-center mb-5">
                        <h2>Contact Me</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <div class="contact-item d-flex mb-3">
                        <div class="icon fs-4 text-primary">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="text ms-3">
                            <h3 class="fs-5">Email</h3>
                            <p class="text-muted" name="email"><%= myResume[0].email %></p>
                        </div>
                    </div>

                    <div class="contact-item d-flex mb-3">
                        <div class="icon fs-4 text-primary">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="text ms-3">
                            <h3 class="fs-5">Phone</h3>
                            <p class="text-muted" name="phone"><%= myResume[0].phoneNumber %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 d-flex align-items-center">
                            
                            <div class="social-links">
                                <a href="<%= myResume[0].facebook %>" target="_blank"class="text-dark me-2"> <i class="fab fa-facebook-f"></i></a>
                                <a href="<%= myResume[0].twitter %>" target="_blank"class="text-dark me-2"> <i class="fab fa-twitter"></i></a>
                                <a href="<%= myResume[0].instagram %>" target="_blank"class="text-dark me-2"> <i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    

                            <div class="row">
                                <div class="col-lg-12 mt-4">
                                    <a href="mailto:<%= myResume[0].email %>"class="btn btn-danger me-4">Send Email</a>
                                </div>
                               
                            </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--Contact end-->

    <footer class="footer border-top py-4">
        <div class="container-lg">
            <div class="row">
                <div class="col-lg-12">
                    <p class="m-0 text-center text-muted">
                        &#169; 2022 Marek A. Sikka
                    </p>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>